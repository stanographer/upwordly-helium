{
  "name": "upwordly-helium",
  "version": "0.1.0",
  "description": "Allows Upword.ly captions to be superimposed on presentations.",
  "private": true,
  "author": {
    "name": "Stanley Sakai",
    "email": "stanley@stanographer.com <stanley@stanographer.com>",
    "url": "https://upword.ly"
  },
  "build": {
    "appId": "com.upwordly.helium",
    "productName": "Upword.ly Helium",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@teamwork/sharedb": "^3.1.0",
    "dotenv": "^8.0.0",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^4.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "isomorphic-ws": "^4.0.1",
    "ot-text": "^1.0.2",
    "path": "^0.12.7",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "purecss": "^1.0.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.1.1",
    "react-scroll": "^1.7.13",
    "react-spinners-kit": "^1.9.0",
    "reconnecting-websocket": "^4.1.10",
    "url": "^0.11.0"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "eject": "rescripts eject",
    "test": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev-win": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "pack-m": "yarn build && electron-builder build -m",
    "pack-w": "yarn build && electron-builder build -w",
    "pack-mw": "yarn build && electron-builder build -mw"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@rescripts/cli": "^0.0.11",
    "@rescripts/rescript-env": "^0.0.10",
    "babel-jest": "^24.8.0",
    "concurrently": "^4.1.1",
    "electron": "^11.5.0",
    "electron-builder": "^21.2.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^24.8.0",
    "jest-transform-stub": "^2.0.0",
    "typescript": "^3.5.3",
    "wait-on": "^3.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFilesAfterEnv": [
      "./src/setupTests.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts)?$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "rescripts": [
    "env"
  ]
}
